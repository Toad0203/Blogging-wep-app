<div class="blog-form">
  <p style="font-size: 40px">
    <a href="/edit/<%= viewPost.id %>"><i class="fa-solid fa-pencil"></i></a>
    <a style="margin-left: 30px" href="/delete/<%= viewPost.id %>"
      ><i class="fa-solid fa-trash"></i
    ></a>
  </p>
  <h2>View post</h2>

  <form>
    <label for="title">Title</label>
    <input
      type="text"
      name="title"
      id="title"
      value="<%= viewPost.title %>"
      readonly
    />
    <label for="description">Description</label>
    <textarea name="description" id="description" readonly>
<%= viewPost.description %></textarea
    >
    <label for="content">Content</label>
    <textarea name="content" id="content" style="height: 200px" readonly>
<%= viewPost.blog_content %></textarea
    >
  </form>
</div>
